{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-console": 2,
    "no-debugger": "error",
    "no-alert": "error",
    "default-case": "error",
    "max-len": ["error", { "code": 120 }],
    "prefer-promise-reject-errors": ["off"],
    "no-return-assign": ["off"],
    "react/jsx-uses-react": 0
  }
}
